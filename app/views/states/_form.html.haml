= form_for @state do |f|
  - if @state.errors.any?
    #error_explanation
      %h2= "#{pluralize(@state.errors.count, "error")} prohibited this state from being saved:"
      %ul
        - @state.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :capital
    = f.text_field :capital
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :shortname
    = f.text_field :shortname
  .field
    = f.label :country_id
    = f.collection_select :country_id, Country.all, :id, :name
  .actions
    = f.submit 'Save'
